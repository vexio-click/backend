{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "&/*": [
        "./resources/*"
      ]
    },
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "test",
    "release",
    "**/*spec.ts"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.jsx",
    "tests/**/*.tsx",
    "src/app.jts"
  ]
}